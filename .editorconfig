# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.py]
line_length = 79
multi_line_output = 4
balanced_wrapping = true
use_parentheses = true
indent_style = space
indent_size = 4
tab_width = 4

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2
shift_width = 2

[Makefile]
indent_style = tab
indent_size = 4
